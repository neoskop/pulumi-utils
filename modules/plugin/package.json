{
    "name": "@neoskop/pulumi-utils-plugin",
    "description": "Utilities for Pulumi plugin development",
    "version": "0.0.0",
    "repository": "https://github.com/neoskop/pulumi-utils",
    "author": "Mark Wecke <wecke@neoskop.de>",
    "license": "MIT",
    "main": "src/index.ts",
    "scripts": {
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "build": "tsc",
        "postbuild": "../../bin/bundle.sh plugin",
        "watch": "tsc -w",
        "test": "jest",
        "publish-next": "npm run build && npm publish dist --tag next",
        "publish-latest-only": "npm run build && npm publish dist",
        "publish-latest": "npm run publish-latest-only && npm dist-tag add `jq '.name' package.json -r`@`jq '.version' package.json -r` next"
    },
    "dependencies": {
        "@neoskop/pulumi-utils-common": "0.0.0",
        "@neoskop/pulumi-utils-grpc": "0.0.0",
        "tslib": "1.11.1"
    },
    "devDependencies": {
        "@types/jest": "25.1.4",
        "@types/prettier": "1.19.0",
        "jest": "25.1.0",
        "jest-circus": "25.1.0",
        "jest-spec-reporter": "1.0.12",
        "prettier": "1.19.1",
        "rimraf": "3.0.2",
        "stream-mock": "2.0.5",
        "ts-jest": "25.2.1",
        "ts-node": "8.6.2",
        "typescript": "3.8.3"
    }
}
