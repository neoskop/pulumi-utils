{
    "name": "neoskop-pulumi-utils",
    "author": "Mark Wecke <wecke@neoskop.de>",
    "version": "0.1.0-rc.1",
    "license": "MIT",
    "private": true,
    "scripts": {
        "generate-grpc-code": "./bin/generate-grpc-code.sh",
        "test": "jest",
        "coverage": "jest && cat coverage/lcov.info | coveralls",
        "build": "./bin/run-in-each-module.sh npm run build",
        "publish-next": "npm run build && ./bin/run-in-each-module.sh npm publish dist --tag next",
        "publish-latest-only": "npm run build && ./bin/run-in-each-module.sh npm publish dist",
        "publish-latest": "npm run publish-latest-only && ./bin/run-in-each-module.sh \"npm dist-tag add `jq '.name' package.json -r`@`jq '.version' package.json -r` next\""
    },
    "workspaces": [
        "modules/common",
        "modules/grpc",
        "modules/sdk",
        "modules/plugin"
    ],
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "htmlWhitespaceSensitivity": "css",
        "printWidth": 140,
        "quoteProps": "as-needed",
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.md",
                "options": {
                    "printWidth": 80
                }
            }
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "coveralls": "3.0.9",
        "husky": "4.2.3",
        "lint-staged": "10.0.8"
    }
}
